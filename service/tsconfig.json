{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		// 配置引包的别名
		"paths": {
			"@src/*": [
				"src/*"
			]
		}
	},
	"exclude": ["node_modules", "dist"]
}