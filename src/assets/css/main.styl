$themm-color = #fc4d56;

$orange-color = #fb8b44

.banner-slide {
  .banner-slide-item {
    height: 200px;

    img {
      width: 100%;
    }
  }

  .cube-slide-dots {
    text-align: right;
    padding-right: 20px;
    padding-bottom: 10px;

    span {
      height: 10px;
      border-radius: 100%;
      border: 1px solid $themm-color;
      background: transparent;

      &.active {
        background: $themm-color;
      }
    }
  }
}

.header-bg {
  position: relative;
  height: 44px;
  line-height: 44px;
  text-align: center;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  z-index: 5;
  background: -webkit-linear-gradient(left, $orange-color, $themm-color); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, $orange-color, $themm-color); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, $orange-color, $themm-color); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, $orange-color, $themm-color); /* 标准的语法 */
}