$theme-color = #fc4d56;
$orange-color = #fb8b44;

// common
.widthfull {
  width: 100%;
}

.border-beee {
  border-bottom: 1px solid #ddd;
}

.ctheme {
  color: $theme-color;
}

.corange {
  color: $orange-color;
}

// /common
.backtop {
  position: fixed;
  right: 15px;
  bottom: 70px;
  width: 30px;
  height: 30px;
  z-index: 9999;
}

.detail-back {
  position: absolute;
  top: 10px;
  left: 15px;
  z-index: 99;
  border-radius: 50px;
  background-color: rgba(0, 0, 0, 0.2);
  padding: 10px;
  color: #fff;
}

.border-tag {
  font-weight: lighter;
  color: #fff;
  font-size: 6px;
  padding: 2px 5px 1px 5px;
  margin-right: 5px;
  background: #fff;
  color: $theme-color;
  border: 1px solid $theme-color;
  border-radius: 8px;
}

.common-slide {
  width: 100%;

  .detail-slide-item {
    height: 300px;

    img {
      width: 100%;
    }
  }

  .common-slide-item {
    height: 180px;

    img {
      width: 100%;
    }
  }

  .cube-slide-dots {
    text-align: right;
    padding-right: 20px;
    padding-bottom: 10px;

    span {
      height: 10px;
      border-radius: 100%;
      border: 1px solid $theme-color;
      background: transparent;

      &.active {
        background: $theme-color;
      }
    }
  }
}

.scroll-wrapper {
  padding-top: 44px;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  z-index: 5;
  background: -webkit-linear-gradient(left, $orange-color, $theme-color); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, $orange-color, $theme-color); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, $orange-color, $theme-color); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, $orange-color, $theme-color); /* 标准的语法 */
}